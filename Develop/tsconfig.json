{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "rootDir": "src",
    "moduleResolution": "bundler", /* Fix module resolution */
    "allowJs": true,
    "checkJs": true,
    "outDir": "dist",
    "noEmitOnError": true,
    "esModuleInterop": true, /* Fix for default imports */
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true
  },
  "include": ["src"]
}
