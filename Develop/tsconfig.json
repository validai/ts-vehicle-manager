{
  "compilerOptions": {
    "module": "CommonJS",         // Use CommonJS
    "target": "ES6",           // Target modern JavaScript
    "moduleResolution": "node",   // Resolve modules correctly
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,      // Allow default imports
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
  "exclude": ["node_modules"]
}
