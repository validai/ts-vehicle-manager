{
  "compilerOptions": {
    "target": "ES6",                  // Output modern JavaScript
    "module": "ESNext",               // Use ECMAScript modules
    "moduleResolution": "node",      // Resolve modules like Node.js
    "outDir": "./dist",              // Specify the output directory
    "rootDir": "./src",              // Specify the source directory
    "esModuleInterop": true,         // Enable default import for CommonJS
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}

